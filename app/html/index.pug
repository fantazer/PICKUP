									.nav-drop__list-val 100
									.nav-drop__list-icon
										+icon("arrow-right","icon")
						.nav-drop__sub.scroll-container
							- for (var j=1;j<10;j++)
								.nav-drop__sub-wrap(class=j===1?'nav-drop__sub-wrap--active':'')
									- for (var i=0;i<3;i++)
