include block_html/_style.pug
include block_html/_include.pug

.head
	//header-top
	.header-top-wrap
		.main-cont
			.header-top
				a(href="#").header-top__location
					.header-top__location-icon
						+icon("location","icon")
					span Санкт-Петербург
				.header-top__nav
					a(href="#").header-top__nav-el Акции
					a(href="#").header-top__nav-el О компании
					a(href="#").header-top__nav-el Контакты
				a(href="#").header-top__reg Регистрация
				a(href="#").header-top__enter
					+icon("user","icon")
					span Войти
	//header-top===end
	//header-middle
	.main-cont
		.header
			a(href="#").logo
				.logo-img
					img(src="img/logo.png", alt="")
				.logo-cont
					.logo-title PKSTYLE.RU
					.logo-text Интернет магазин оборудования для пикапов
			.header-phone
				a(href="tel:+7 (983) 510-85-31").header-phone__el +7 (983) 510-85-31
				a(href="tel:+7 (913) 937-44-35").header-phone__el +7 (913) 937-44-35
			.header-search
				form(action="#")
					input(type="text" placeholder="Поиск оборудования").input
				+icon("search","icon")
			.header-conf
				a(href="#").header-conf__el
					.header-conf__el-icon
						+icon("heart","icon")
						.header-conf__el-val 2
					.header-conf__el-text Избранное
				a(href="#").header-conf__el
					.header-conf__el-icon
						+icon("compare","icon")
					.header-conf__el-text Сравнение
				a(href="#").header-conf__el
					.header-conf__el-icon
						+icon("cart","icon")
						.header-conf__el-val 2
					.header-conf__el-text Корзина
	//header-middle

	//main-nav
	.nav-wrap
		.nav-wrap-container
			.main-cont
				.nav
					.nav-el.nav-el-menu
						+icon("menu","icon icon-open")
						+icon("close","icon icon-close")
						span марки авто
					.nav-list
						.nav-el
							a(href="#") кунги
						.nav-el
							a(href="#") крышки кузова
						.nav-el
							a(href="#") вкладиши в кузов
						.nav-el
							a(href="#") тенты
						.nav-el
							a(href="#") аксессуары
						.nav-el
							a(href="#") запчасти
			.nav-drop
				.main-cont
					.nav-drop__wrap
						.nav-drop__list.scroll-container
							- for (var i=0;i<14;i++)
								.nav-drop__list-el
									.nav-drop__list-name Nissan
									.nav-drop__list-val 100
									.nav-drop__list-icon
										+icon("arrow-right","icon")
						.nav-drop__sub.scroll-container
							- for (var j=1;j<10;j++)
								.nav-drop__sub-wrap(class=j===1?'nav-drop__sub-wrap--active':'')
									- for (var i=0;i<3;i++)
										a(href="#").nav-drop__sub-el свет5 #{j}
										a(href="#").nav-drop__sub-el стропы, тросы, такелаж #{j}
										a(href="#").nav-drop__sub-el шины #{j}
										a(href="#").nav-drop__sub-el диски #{j}
										a(href="#").nav-drop__sub-el экспедиционные багажники #{j}

						.nav-drop__banner
							img(src="img/banner.jpg", alt="")


	//main-nav===end
.section-slider
	.main-cont
		.type-slider-wrap.slider-wrap
			.slider-control.slider-control--left
				+icon("arrow-left","icon")
			.slider-control.slider-control--right
				+icon("arrow-right","icon")
			.type-slider.slider-item
				- for (var i=0;i<2;i++)
					a(href="#").type-slider__el
						img(src="img/car-logo-1.png", alt="").type-slider__el-img
						.type-slider__el-title mercedes-benz
					a(href="#").type-slider__el
						img(src="img/car-logo-2.png", alt="").type-slider__el-img
						.type-slider__el-title toyota
					a(href="#").type-slider__el
						img(src="img/car-logo-3.png", alt="").type-slider__el-img
						.type-slider__el-title volkswagen
					a(href="#").type-slider__el
						img(src="img/car-logo-4.png", alt="").type-slider__el-img
						.type-slider__el-title land ROVER
					a(href="#").type-slider__el
						img(src="img/car-logo-5.png", alt="").type-slider__el-img
						.type-slider__el-title mazda
					a(href="#").type-slider__el
						img(src="img/car-logo-6.png", alt="").type-slider__el-img
						.type-slider__el-title mitsubishi

.info-wrap
	.main-cont
		.info
			.info-title мы специализируемся на пикапах
			.info-text Многолетний опыт продажи, установки и эксплуатации аксессуаров от многих российских и зарубежных производителей позволяет нам помогать своим клиентам в выборе оптимального решения
		.info-type
			.info-type__el
				.info-type__el-icon
					+icon("deliver","icon")
				.info-type__el-title доставка
				.info-type__el-text Отправка в любую точку России
			.info-type__el
				.info-type__el-icon
					+icon("box","icon")
				.info-type__el-title прямые поставки
				.info-type__el-text Прямые поставки от производителей
			.info-type__el
				.info-type__el-icon
					+icon("cart","icon")
				.info-type__el-title сертификация
				.info-type__el-text Все товары сертифицированы

.footer-top-wrap
	.main-cont
		.footer-top
			.footer-top__copy © PickupStyle 2018
			a(href="#").footer-top__lk
				+icon("user","icon")
				span Личный кабинет
			a(href="#").footer-top__politick Политика конфиденциальности
			a(href="#").footer-top__soc
				+icon("instagram","icon")
			a(href="#").footer-top__soc
				+icon("vk","icon")
.footer-wrap
	.main-cont
		.footer
			.footer__menu
				.footer__menu-title компания
				a(href="#").footer__menu__el О компании
				a(href="#").footer__menu__el Производители
				a(href="#").footer__menu__el Карта сайта
				a(href="#").footer__menu__el Контакты
			.footer__menu
				.footer__menu-title сервис и поддержка
				a(href="#").footer__menu__el Оплата и доставка
				a(href="#").footer__menu__el Как сделать заказ
				a(href="#").footer__menu__el Вопросы и ответы
				a(href="#").footer__menu__el Возврат товара
				a(href="#").footer__menu__el Возврат денежных средства
			.footer-location.slider-wrap
				.footer-location__title
					span наши филиалы
					.slider-control-wrap
						.slider-control.slider-control--left
							+icon("arrow-left","icon")
						.slider-control.slider-control--right
							+icon("arrow-right","icon")
				.footer-slider.slider-item
					- for (var i=0;i<3;i++)
						.footer-slider__el
							.footer-location__item
								.footer-location__icon
									+icon("location","icon")
								.footer-location__info
									.footer-location__town Новосибирск
									.footer-location__street ул. Немирович-Данченко д.120/2
									a(href="tel:8 800 555 35 35").footer-location__phone 8 800 555 35 35
							.footer-location__item
								.footer-location__icon
									+icon("location","icon")
								.footer-location__info
									.footer-location__town Новосибирск
									.footer-location__street ул. Немирович-Данченко д.120/2
									a(href="tel:8 800 555 35 35").footer-location__phone 8 800 555 35 35
			.footer-contact
				.footer-contact__title контакты
				.footer-contact__el
					.footer-contact__icon
						+icon("phone","icon")
					.footer-contact__info
						a(href="tel:+7 (983) 510-85-31").footer-contact__info-el +7 (983) 510-85-31
						a(href="tel:+7 (913) 937-44-35").footer-contact__info-el +7 (913) 937-44-35
				.footer-contact__el
					.footer-contact__icon
						+icon("mail","icon")
					.footer-contact__info
						a(href="mailto:Sales@pkstyle.ru").footer-contact__info-el Sales@pkstyle.ru
				.footer-contact__el
					.footer-contact__icon
						+icon("location","icon")
					.footer-contact__info
						.footer-contact__info-el Новосибирск ул. Немирович-Данченко д.120/2

.modal-layer
	.modal-filter

