.page-wrap
	.main-cont
		.page
			.mobile-toggle.mobile-toggle--cat
				.mobile-toggle__name Категории
				.mobile-toggle__icon
					+icon("arrow-down","icon")
			.category-wrap
				.category-title категории
				.category
