	//header-middle

	//main-nav
	.nav-wrap
		.nav-wrap-container
			.main-cont
				.nav-mobile
					.nav-mobile__toggle.head-toggle
						+icon("menu","icon icon-open")
						+icon("close","icon icon-close")
					a(href="#").nav-mobile__logo pkstyle.ru
