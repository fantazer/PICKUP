					.nav-list
						.nav-el
							a(href="#") кунги
						.nav-el
							a(href="#") крышки кузова
						.nav-el
							a(href="#") вкладиши в кузов
						.nav-el
							a(href="#") тенты
						.nav-el
							a(href="#") аксессуары
						.nav-el
							a(href="#") запчасти
			.nav-drop
				.main-cont
					.nav-drop__wrap
						.nav-drop__list.scroll-container
							- for (var i=0;i<14;i++)
								.nav-drop__list-el(class=i===0?'nav-drop__list-el--active':'')
